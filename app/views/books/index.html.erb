<div class="container"> 
  <div class="row"> 
    <div class="col-md-3">
      <!-- ユーザー情報 -->
      <%= render 'users/user_info', user: @user %>

      <!-- 新規投稿作成 -->
      <h3>New book</h3>
      <%= render 'layouts/message', resece: @book %>
      <%= render 'book_edit_form', book: @book %>
    </div>

    <div class="col-md-8  offset-md-1">
      <h3>Books</h3>
      <%= link_to '新しい順', books_path(latest: "true") %>
        |<%= link_to '古い順', books_path(old: "true") %>
        |<%= link_to '評価の高い順', books_path(star_count: "true") %>
      <%= render 'books_table', books: @books %>
    </div>
  </div>
</div>